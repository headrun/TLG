`created_at` DATETIME NOT NULL DEFAULT CURRENT_TIMESTAMP , 
`updated_by` INT NULL DEFAULT NULL , `updated_at` DATETIME NULL DEFAULT NULL , PRIMARY KEY (`id`)) ENGINE = InnoDB;

